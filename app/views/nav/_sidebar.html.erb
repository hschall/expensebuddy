    <%= image_tag "Empresas.svg", class: "sidebar-icon" %> Empresas
  <% end %>
  <%= link_to import_path, class: "sidebar-link #{'active' if current_page?(import_path)}" do %>
    <%= image_tag "Importar.svg", class: "sidebar-icon" %> Importar EDC
