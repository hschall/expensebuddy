<div class="container mt-5">
  <h3>Categorías</h3>

  <%= form_with model: @category, local: true do |f| %>
    <div class="input-group mb-3">
      <%= f.text_field :name, class: "form-control", placeholder: "Nueva categoría" %>
      <%= f.submit "Agregar", class: "btn-custom-save-sm" %>
    </div>
  <% end %>

<div class="container h-100 d-flex justify-content-start" style="font-size: 0.95rem; background-color: #fff;">
  <div style="width: 100%;">
    <table class="table table-borderless table-striped">
      <thead>
        <tr>
          <th>Nombre</th>
          <th class="text-end pe-5">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td class="d-flex justify-content-end gap-2">
              <%= link_to "Editar", edit_category_path(category), class: "btn-custom-primary-sm" %>
              <%= button_to "Eliminar", category_path(category),
                    method: :delete,
                    form: { class: "d-inline", data: { turbo: false } },
                    data: { confirm: "¿Eliminar esta categoría?" },
                    class: "btn-custom-danger-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
