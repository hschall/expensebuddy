<!doctype html>
<html lang="en">
  <head>
    <link rel="icon" type="image/svg+xml" href="<%= asset_path('emoji.svg') %>">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ExpenseBuddy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- ✅ Load Chart.js only once -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
  </head>

  <body>

    <% if user_signed_in? && !devise_controller? %>
      <% if current_user.setting&.cycle_end_day.present? %>
        <%= render 'nav/sidebar' %>
      <% else %>
        <div class="logout-button-only px-3 py-2">
          <%= button_to "Cerrar Sesión", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger btn-sm" %>
        </div>
      <% end %>
    <% end %>

    <% unless devise_controller? %>
      <div class="main-content">
        <br>
        <% unless (controller_name == "imports" && action_name == "new") || (controller_name == "settings" && action_name == "edit") %>
          <%= render "layouts/alerts" %>
        <% end %>
        <%= yield %>
      </div>
    <% else %>
      <%= yield %>
    <% end %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
